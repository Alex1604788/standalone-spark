{
  "manifest_version": 3,
  "name": "АВТООТВЕТ",
  "version": "2.0.5",
  "description": "Автоматизация ответов на отзывы и вопросы покупателей Ozon",
  "permissions": ["tabs", "scripting", "alarms", "storage", "notifications", "activeTab", "webNavigation"],
  "host_permissions": [
    "https://seller.ozon.ru/*",
    "https://nxymhkyvhcfcwjcfcbfy.supabase.co/*",
    "https://auto-otvet-proxy.vercel.app/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://seller.ozon.ru/*"],
      "js": ["content.js", "content_publish.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["content.js", "content_publish.js"],
      "matches": ["https://seller.ozon.ru/*"]
    }
  ]
}
